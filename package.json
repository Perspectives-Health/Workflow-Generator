{
  "name": "Perspectives Workflow Generator",
  "description": "Internal tool to generate and manage workflows",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "prebuild": "pnpm --filter webext-bridge build",
    "build": "pnpm run schema:generate && pnpm run prebuild && wxt --mode development build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare",
    "schema:create": "openapi-typescript openapi.json -o modules/shared/schema.d.ts",
    "schema:download": "curl http://localhost:5001/openapi.json -o openapi.json",
    "schema:lint": "redocly lint --generate-ignore-file openapi.json",
    "schema:generate": "pnpm run schema:download && pnpm run schema:create && pnpm run schema:lint"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.10",
    "openapi-fetch": "^0.15.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "webext-bridge": "^6.0.1"
  },
  "devDependencies": {
    "@redocly/cli": "^2.11.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@wxt-dev/module-react": "^1.1.3",
    "openapi-typescript": "^7.10.1",
    "typescript": "^5.9.2",
    "wxt": "^0.20.6"
  }
}
