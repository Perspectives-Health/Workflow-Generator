{
  "name": "Perspectives Workflow Generator",
  "description": "Internal tool to generate and manage workflows",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "prebuild": "pnpm --filter webext-bridge build",
    "build": "pnpm run schema:generate && pnpm run prebuild && wxt --mode development build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare",
    "schema:create": "openapi-typescript openapi.json -o modules/shared/schema.d.ts",
    "schema:download": "curl http://localhost:5001/openapi.json -o openapi.json",
    "schema:lint": "redocly lint --generate-ignore-file openapi.json",
    "schema:generate": "pnpm run schema:download && pnpm run schema:create && pnpm run schema:lint"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.90.10",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "html2canvas-pro": "^1.5.13",
    "lucide-react": "^0.554.0",
    "next-themes": "^0.4.6",
    "openapi-fetch": "^0.15.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.5.5",
    "webext-bridge": "^6.0.1"
  },
  "devDependencies": {
    "@redocly/cli": "^2.11.1",
    "@thedutchcoder/postcss-rem-to-px": "^0.0.2",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@wxt-dev/module-react": "^1.1.3",
    "autoprefixer": "^10.4.22",
    "openapi-typescript": "^7.10.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.2",
    "wxt": "^0.20.6"
  }
}
